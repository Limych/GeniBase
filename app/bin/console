#!/usr/bin/env php
<?php
        
define('BASE_DIR', dirname(__DIR__));

require_once BASE_DIR.'/vendor/autoload.php';

set_time_limit(0);

use Symfony\Component\Console\Input\ArgvInput;

$input = new ArgvInput();
$env = $input->getParameterOption(array('--env', '-e'), getenv('SYMFONY_ENV') ?: 'dev');

$app = require BASE_DIR.'/app/src/app.php';
require BASE_DIR.'/app/config/'.$env.'.php';
require BASE_DIR.'/app/src/app.php';
$console = require BASE_DIR.'/app/src/console.php';
$console->run();
